<Window x:Class="ClothesShopManagement.View.DetailImport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClothesShopManagement.View"       
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        DataContext="{StaticResource DetailImportVM}"
        x:Name="DetailImportwd"
        Title="DetailImport"                 
        Height="600" 
        Width="700">
    <Border
        x:Name="xx"
        CornerRadius="15"
        >
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0,0.5">
                <GradientStop Color="#FFE5D8" Offset="0"/>
                <GradientStop Color="#FFCAD4" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseLeftButtonDown">
                <i:InvokeCommandAction Command="{Binding MoveWindow}"
                                       CommandParameter="{Binding ElementName=DetailImportwd}"></i:InvokeCommandAction>
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="180"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"
                                >
                    <materialDesign:PackIcon Kind="WindowMinimize" Foreground="White" Height="24" Width="24" Margin="0,0,8,0">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction Command="{Binding Minimizewd}"
                                                       CommandParameter="{Binding ElementName=DetailImportwd}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </materialDesign:PackIcon>
                    <materialDesign:PackIcon Kind="CloseThick" Foreground="White" Height="24" Width="24">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction Command="{Binding Closewd}"
                                                       CommandParameter="{Binding ElementName=DetailImportwd}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </materialDesign:PackIcon>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <TextBlock
                    Text="PHIẾU NHẬP HÀNG"
                    Foreground="Black"
                    FontFamily="{StaticResource Custom}"
                    FontSize="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    />
            </Grid>
            <Grid Grid.Row="2">
                <Border
                        Margin="-6,0,0,0"
                        Width="600"
                        HorizontalAlignment="Center"
                        Background="White"
                        CornerRadius="15"
                        >
                    <StackPanel
                            Margin="10"
                            >
                        <TextBlock
                                Margin="0,0,0,5"
                                Text="THÔNG TIN PHIẾU NHẬP"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center"
                                />
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="MÃ ND"
                                    FontFamily="{StaticResource Custom}"
                                    />
                                <TextBlock
                                    Margin="4,0,0,0"
                                    Text="|"
                                    FontFamily="{StaticResource Custom}"
                                    />
                                <TextBlock
                                    Margin="4,0,0,0"
                                    Text="TÊN ND"
                                    FontFamily="{StaticResource Custom}"
                                    />
                            </StackPanel>
                            <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBox
                                    x:Name="MaND"
                                    HorizontalAlignment="Left"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="0"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    IsEnabled="False"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                    <TextBox
                                            Text="|"
                                    HorizontalAlignment="Left"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="0"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    IsEnabled="False"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                    <TextBox
                                    x:Name="TenND"
                                    HorizontalAlignment="Left"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="0"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    IsEnabled="False"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>                             
                        <StackPanel>
                            <TextBlock
                                    Margin="8,0,0,0"
                                    Text="THỜI GIAN"
                                    FontFamily="{StaticResource Custom}"
                                />
                            <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                <TextBox
                                    x:Name="Ngay"
                                    HorizontalAlignment="Left"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="0"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    IsEnabled="False"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                            </Border>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock
                                    Margin="8,0,0,0"
                                    Text="MÃ PHIẾU NHẬP"
                                    FontFamily="{StaticResource Custom}"
                                />
                            <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                <TextBox
                                    x:Name="MaPN"
                                    HorizontalAlignment="Left"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="0"
                                    IsEnabled="False"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
            <Grid Grid.Row="3">
                <StackPanel>
                    <Border
                        Margin="-12,10,0,0"
                        Width="600"
                        Height="40"
                        CornerRadius="10"
                        Background="White"
                        >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <TextBlock
                                Text="MÃ SP"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Custom}"
                                FontSize="12"
                                />
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBlock
                                                Margin="2,0,0,0"
                                HorizontalAlignment="Left"
                                Text="TÊN SẢN PHẨM"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Custom}"
                                FontSize="12"
                                />
                            </Grid>
                            <Grid Grid.Column="2">
                                <TextBlock
                                Text="SIZE"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Custom}"
                                FontSize="12"
                                />
                            </Grid>
                            <Grid Grid.Column="3">
                                <TextBlock
                                Text="SỐ LƯỢNG"
                                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                                MaxWidth="150"
                                FontFamily="{StaticResource Custom}"
                                FontSize="12"
                                />
                            </Grid>
                        </Grid>
                    </Border>
                    <ListView x:Name="ListViewSP" 
                          SelectionMode="Single"
                          ScrollViewer.VerticalScrollBarVisibility="Visible"
                            Height="280"
                        >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                Margin="35,0,0,0"
                                Width="600"
                                Height="40"
                                CornerRadius="10"
                                Background="White"
                        >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="220"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <TextBlock
                                Text="{Binding MaSp}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Custom}"
                                FontSize="12"
                                />
                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <TextBlock
                                                Margin="2,0,0,0"
                                HorizontalAlignment="Left"
                                Text="{Binding TenSP}"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Custom}"
                                FontSize="12"
                                />
                                        </Grid>
                                        <Grid Grid.Column="2">
                                            <TextBlock
                                Text="{Binding Size}"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Custom}"
                                FontSize="12"
                                />
                                        </Grid>
                                        <Grid Grid.Column="3">
                                            <TextBlock
                                Text="{Binding SL}"
                                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                                MaxWidth="150"
                                FontFamily="{StaticResource Custom}"
                                FontSize="12"
                                />
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
