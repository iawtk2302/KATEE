<Window x:Class="ClothesShopManagement.View.AddNDView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClothesShopManagement.View"
        mc:Ignorable="d" 
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        DataContext="{StaticResource AddNDVM}"
        x:Name="AddNDwd"
        ResizeMode="CanMinimize"
        Title="THÊM NGƯỜI DÙNG" Height="450" Width="500">
    <Border>
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0,0.5">
                <GradientStop Color="#FFE5D8" Offset="0"/>
                <GradientStop Color="#FFCAD4" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="210"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBlock
                            HorizontalAlignment="Center"
                            Text="THÔNG TIN NHÂN VIÊN"
                            FontSize="24"
                            FontFamily="{StaticResource Custom}"
                            />
            </Grid>
            <Grid Grid.Row="1"
                  Margin="0,10,0,0"
                  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Image
                        x:Name="HinhAnh1"
                        Margin="6"
                        Source="{Binding linkaddimage}"
                        >
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction Command="{Binding AddImage}"
                                       CommandParameter="{Binding ElementName=HinhAnh1}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Image>
                </Grid>
                <Grid Grid.Column="1">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center"
                                >
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="MÃ NHÂN VIÊN"
                                    FontFamily="{StaticResource Custom}"
                                />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                                    x:Name="MaND"
                                    HorizontalAlignment="Left"
                                    Width="150"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="0"
                                    materialDesign:HintAssist.Hint="THÊM MÃ ND"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"

                                />
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Vertical"
                                        Margin="10,0,0,0"
                                        >
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="HỌ TÊN"
                                    FontFamily="{StaticResource Custom}"
                                />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                                    x:Name="TenND"
                                    FontFamily="{StaticResource Custom}"
                                    HorizontalAlignment="Left"
                                    Width="150"
                                    BorderThickness="0"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:HintAssist.Hint="THÊM HỌ TÊN"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                    materialDesign:TextFieldAssist.UnderlineBrush="LightPink"
                                />
                                </Border>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,10,0,0"
                                    >
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="SỐ ĐIỆN THOẠI"
                                    FontFamily="{StaticResource Custom}"
                                />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                                    x:Name="SDT"
                                    HorizontalAlignment="Left"
                                    Width="150"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="0"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:HintAssist.Hint="THÊM SDT"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                    materialDesign:TextFieldAssist.UnderlineBrush="LightPink"
                                />
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Vertical"
                                        Margin="10,0,0,0"
                                        >
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="GIỚI TÍNH"
                                    FontFamily="{StaticResource Custom}"
                                />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                                    Margin="6,0,0,0"
                                    x:Name="GT"
                                    FontFamily="{StaticResource Custom}"
                                    HorizontalAlignment="Left"
                                    Width="145"
                                    BorderThickness="0"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:HintAssist.Hint="THÊM GIỚI TÍNH"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="4,0,0,0"
                                    materialDesign:TextFieldAssist.UnderlineBrush="LightPink"
                                />
                                </Border>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,10,0,0"
                                    >
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="NGÀY SINH"
                                    FontFamily="{StaticResource Custom}"
                                />
                                <DatePicker
                                        x:Name="NS"
                                        materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                                        Width="155"
                                        BorderBrush="Black"
                                        FontFamily="{StaticResource Custom}"
                                        BorderThickness="0"
                                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                        />

                            </StackPanel>
                            <StackPanel Orientation="Vertical"
                                        Margin="10,0,0,0"
                                        >
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="CHỨC VỤ"
                                    FontFamily="{StaticResource Custom}"
                                />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                                    x:Name="QTV"
                                    FontFamily="{StaticResource Custom}"
                                    HorizontalAlignment="Left"
                                    Width="150"
                                    BorderThickness="0"
                                    materialDesign:HintAssist.Hint="THÊM QTV"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                    materialDesign:TextFieldAssist.UnderlineBrush="LightPink"
                                />
                                </Border>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Vertical"
                                        >
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
            <Grid Grid.Row="2">
                <StackPanel Orientation="Vertical"
                            Margin="6,0,15,0"
                                        >
                    <TextBlock
                                    Margin="8,0,0,0"
                                    Text="ĐỊA CHỈ"
                                    FontFamily="{StaticResource Custom}"
                                />
                    <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                        <TextBox
                                    x:Name="DC"
                                    FontFamily="{StaticResource Custom}"
                                    HorizontalAlignment="Left"
                                    Height="100"
                                    Width="498"
                                    BorderThickness="0"
                                    materialDesign:HintAssist.Hint="THÊM ĐỊA CHỈ"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                    materialDesign:TextFieldAssist.UnderlineBrush="LightPink"
                                />
                    </Border>
                    <Button
                        BorderThickness="0"
                        Content="THÊM"
                        Margin="0,10,0,0"
                        Background="White"
                        Foreground="Black"
                        x:Name="btnadd"
                        >
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding AddNDCommand}"
                                       CommandParameter="{Binding ElementName=AddNDwd}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
